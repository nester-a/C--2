<Window x:Class="Company.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Company"
        mc:Ignorable="d"
        Title="Моя компания" Height="450" Width="800">
    <Grid>
        <ListView x:Name="companyListView" 
                  SelectionMode="Single"
                  Height="400" Margin="10,10,303,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="150"  Header="Отдел"
                                    DisplayMemberBinding="{Binding Department}"/>
                    <GridViewColumn Width="200"  Header="Сотрудник"
                                    DisplayMemberBinding="{Binding NameAndSurname}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
